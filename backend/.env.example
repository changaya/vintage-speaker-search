# Port Configuration
PORT=4000
DB_PORT=3306

# Database
DATABASE_URL="mysql://vintage_user:vintage_pass@localhost:${DB_PORT}/vintage_audio"

# Environment (development | production)
# - development: Shows detailed error messages, stack traces, and Zod validation details
# - production: Shows user-friendly error messages, hides stack traces
NODE_ENV=development

# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE_MB=10

# Error Handling
# In development: detailed error messages with stack traces
# In production: user-friendly error messages only
# See docs/ERROR_HANDLING_GUIDE.md for details
